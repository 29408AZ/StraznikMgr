<Window x:Class="ModulePatrol.Views.ZalogaPodgladWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Skład załogi"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        MinWidth="500"
        MinHeight="300">
    <Border Padding="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Daty i godziny -->
            <GroupBox Header="Okres" Grid.Row="0" Grid.ColumnSpan="2" Margin="0 0 0 8">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0 0 8 0" VerticalAlignment="Center">
                        <TextBlock Text="Data od:" VerticalAlignment="Center" Margin="0 0 6 0"/>
                        <DatePicker SelectedDate="{Binding DataOd}" Width="140"/>
                        <TextBlock Text="Godz.:" VerticalAlignment="Center" Margin="8 0 4 0"/>
                        <TextBox Text="{Binding GodzinaOd}" Width="60" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Data do:" VerticalAlignment="Center" Margin="0 0 6 0"/>
                        <DatePicker SelectedDate="{Binding DataDo}" Width="140"/>
                        <TextBlock Text="Godz.:" VerticalAlignment="Center" Margin="8 0 4 0"/>
                        <TextBox Text="{Binding GodzinaDo}" Width="60" />
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Jednostka -->
            <GroupBox Header="Jednostka" Grid.Row="1" Grid.ColumnSpan="2" Margin="0 0 0 8">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Orientation="Horizontal">
                        
                    <TextBlock Text="Jednostka:" VerticalAlignment="Center" Margin="0 6 8 0"/>
                    <TextBlock Text="{Binding Jednostka}"  VerticalAlignment="Center" Margin="0 6 0 0"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Skład załogi -->
            <GroupBox Header="Skład załogi" Grid.Row="2" Grid.ColumnSpan="2" Margin="0 0 0 8">
                <ItemsControl ItemsSource="{Binding Zaloga}" Margin="8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Stanowisko}" FontWeight="SemiBold" Margin="0 0 6 0"/>
                                <TextBlock Text=":" Margin="0 0 6 0"/>
                                <TextBlock Text="{Binding Marynarz}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </GroupBox>

            <!-- Przyciski -->
            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 8 0 0">
                <Button Content="Zapisz" Width="100" Margin="0 0 8 0" IsDefault="True" Click="Zapisz_Click"/>
                <Button Content="Anuluj" Width="100" IsCancel="True" Click="Anuluj_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
